@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <link href="~/css/ZeroBlog_Home/RegisterUser.css" rel="stylesheet" />
    <script src="~/Scripts/ZeroBlog_Home/RegisterUser.js"></script>


</head>
<body>


    <div class="jq22-container" style="padding-top:1px">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">登 录</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">注 册</label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label id="LoginUserNameTitle" for="LogoinUserName" class="label">用户名</label>
                            <input id="LoginUserName" type="text" class="input" onblur="validateLoginUserName();">
                        </div>
                        <div class="group">
                            <label id="LoginPwdTitle" for="LoginPwd" class="label">用户密码</label>
                            <input id="LoginPwd" type="password" class="input" data-type="password" onblur="validateLoginPwd();">
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> 记住登录信息</label>
                        </div>
                        <div class="group">
                            <input id="Login" type="button" class="button" value="登 录" onclick="Login();">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            @*<a href="#forgot">忘记 密码?</a>*@
                        </div>
                    </div>
                    <div class="sign-up-htm">
                        <div class="group">
                            <label id="UserNameTitle" for="UserName" class="label">用户名(必填)</label>
                            <input id="UserName" type="text" class="input" onblur="validateUserName();">
                        </div>
                        <div class="group">
                            <label id="PwdTitle" for="Pwd" class="label">密码(必填)</label>
                            <input id="Pwd" type="password" class="input" data-type="password" onblur="validatePwd();">
                        </div>
                        <div class="group">
                            <label id="AgainPwdTitle" for="AgainPwd" class="label">确认密码(必填)</label>
                            <input id="AgainPwd" type="password" class="input" data-type="password" onblur="validatePwd2();">
                        </div>
                        <div class="group">
                            <label id="MailboxTitle" for="Mailbox" class="label">邮箱(选填)</label>
                            <input id="Mailbox" type="text" class="input" onblur="validateMailbox();">
                        </div>
                        <div class="group">
                            <input id="Register" type="button" class="button" value="注 册" onclick="Register();">
                        </div>

                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a for="tab-1">已有 账号?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>


</body>
</html>